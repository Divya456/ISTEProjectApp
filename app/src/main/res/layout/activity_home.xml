<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bk.iste.Home"
    android:orientation="vertical"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"

        android:layout_gravity="center"
        android:id="@+id/img"
        android:src="@drawable/ic_logo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <Button
            android:text="SIGs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:onClick="buttonListen"
            android:layout_marginRight="6dp"
            android:id="@+id/sig_but"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/img"
            android:textSize="20dp"
            android:background="@drawable/si_but"
            android:gravity="center"/>




        <Button android:text="TRANSCEND"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/transcend"
            android:background="@drawable/si_but"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/img"/>
        <!--android:background="@android:color/secondary_text_light"-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button android:text="BLOG"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_below="@id/sig_but"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/blog_but"
            android:layout_marginRight="6dp"
            android:onClick="buttonListen"
            android:background="@drawable/blog_but"/>
        <!--android:background="#a0a"-->
        <Button android:text="EVENTS"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:id="@+id/event_but"
            android:layout_below="@id/sig_but"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/event_edit"
            android:onClick="buttonListen"
            />

    </LinearLayout>



</LinearLayout>